<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ScrollView with Constraints -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Existing Horizontal Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileimageView"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="13dp"
                    app:srcCompat="@drawable/avatar" />

                <LinearLayout
                    android:layout_width="226dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomebacktextView"
                        android:layout_width="149dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_weight="1"
                        android:text="Welcome Back"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vedant Gandhi"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/Emergencybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Emergency"
                    android:textSize="12dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>

            <!-- New TextView for "Location" -->
            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <!-- New SearchView for Location Search -->
            <SearchView
                android:id="@+id/locationSearchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="5dp"
                android:queryHint="Enter Your Current Location"
                android:background="@drawable/rounded_search_background"/>
            <!-- MapView for displaying the map -->
<!--            <com.google.android.gms.maps.MapView-->
<!--                android:id="@+id/mapView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="300dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginStart="13dp"-->
<!--                android:layout_marginEnd="13dp"/>-->

            <!-- TextView for "Available Service" -->
            <TextView
                android:id="@+id/availableServiceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:text="Available Service"
                android:textSize="18dp"
                android:textStyle="bold"/>



            <!-- Service Provider Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/serviceProviderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_background"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <!-- Icon Circle -->
                    <ImageView
                        android:id="@+id/serviceProviderIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/provider_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/serviceProviderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patel Towing Service"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginStart="2dp"/>

                        <TextView
                            android:id="@+id/serviceProviderDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.3 km Away"
                            android:textSize="14dp"
                            android:layout_marginStart="2dp"/>
                    </LinearLayout>

                    <!-- Estimated Time of Arrival -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:background="#000000"
                        android:padding="8dp"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated Time of Arrival"
                            android:textColor="#FFFFFF"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13 min"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
