<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Servicepage"
    android:background="@android:color/white">

    <!-- Add ScrollView -->
    <ScrollView
        android:id="@+id/scrollableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Inner Container for Scrollable Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title: Towing Service -->
            <TextView
                android:id="@+id/serviceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Towing Service"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Rectangle Image with Border Radius -->
            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/towing"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:layout_marginBottom="16dp" />

            <!-- Service Info and Estimated Time Container -->
            <LinearLayout
                android:id="@+id/serviceInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Service Provider Name -->
                <TextView
                    android:id="@+id/serviceProviderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patel Towing Service"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <!-- Service Provider Address -->
                <TextView
                    android:id="@+id/serviceProviderAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GF1-4 Akshar Complex Nr. Priya Talkies Saiyad - Vasna Road, Vadodara"
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Estimated Time Container -->
                <LinearLayout
                    android:id="@+id/estimatedTimeContainer"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_black_box"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp">

                    <!-- Estimated Time Title -->
                    <TextView
                        android:id="@+id/estimatedTimeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estimated Time of Arrival"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <!-- Estimated Time Value -->
                    <TextView
                        android:id="@+id/estimatedTimeValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13 mins"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/selectServiceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Service Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />
            <!-- Select Service Dropdown -->
            <Spinner
                android:id="@+id/selectService"
                android:layout_width="match_parent"
                android:layout_height="51sp"
                android:background="@drawable/spinner_background"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/selectCarModelLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Car Model"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />
            <!-- Select Car Model Dropdown -->
            <Spinner
                android:id="@+id/selectCarModel"
                android:layout_width="match_parent"
                android:layout_height="51sp"
                android:background="@drawable/spinner_background"
                android:layout_marginBottom="16dp" />

            <!-- Current Location Rectangle -->
            <EditText
                android:id="@+id/confirmLocationInput"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:background="@drawable/spinner_background"
                android:hint="Confirm your location"
                android:padding="10dp"
                android:gravity="top|start"
                android:layout_marginBottom="8dp" />

            <!-- Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Use GPS Button -->
                <Button
                    android:id="@+id/useGpsButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Use GPS"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <!-- Book Now Button -->
                <Button
                    android:id="@+id/bookNowButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Book Now"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navbar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="8sp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/navbar_profile">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/navbar_home">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/navbar_history">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
