<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Servicepage"
    android:background="@android:color/white">

    <!-- Title: Towing Service (Bold and Centered) -->
    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Towing Service"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center"/>

    <!-- Rectangle Image with Border Radius -->
    <ImageView
        android:id="@+id/serviceImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/towing"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image"
        app:layout_constraintTop_toBottomOf="@id/serviceTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Service Info and Estimated Time Container -->
    <LinearLayout
        android:id="@+id/serviceInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/serviceImage">

        <!-- Service Provider Name -->
        <TextView
            android:id="@+id/serviceProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patel Towing Service"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"/>

        <!-- Service Provider Address -->
        <TextView
            android:id="@+id/serviceProviderAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GF1-4 Akshar Complex Nr. Priya Talkies Saiyad - Vasna Road, Vadodara"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:gravity="center"/>

        <!-- Estimated Time Container -->
        <LinearLayout
            android:id="@+id/estimatedTimeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_black_box"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <!-- Estimated Time Title -->
            <TextView
                android:id="@+id/estimatedTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Time of Arrival"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- Estimated Time Value -->
            <TextView
                android:id="@+id/estimatedTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 mins"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Select Service Dropdown -->
    <Spinner
        android:id="@+id/selectService"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@id/serviceInfoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:minWidth="200dp" />

    <!-- Select Car Model Dropdown -->
    <Spinner
        android:id="@+id/selectCarModel"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@id/selectService"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:minWidth="200dp" />

    <!-- Current Location Rectangle -->
    <EditText
        android:id="@+id/confirmLocationInput"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:hint="Confirm your location"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/selectCarModel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Use GPS Button -->
    <Button
        android:id="@+id/useGpsButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Use GPS"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/confirmLocationInput"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Book Now Button -->
    <Button
        android:id="@+id/bookNowButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/confirmLocationInput"
        app:layout_constraintStart_toEndOf="@id/useGpsButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
